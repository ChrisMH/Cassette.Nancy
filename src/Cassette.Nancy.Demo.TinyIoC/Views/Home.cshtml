@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@using Cassette.Nancy
@{
  Bundles.Reference("Scripts/app");
  Bundles.Reference("Styles");
}

<!DOCTYPE html>
<html>
<head>
  <title>Cassette.Nancy.Demo.TinyIoC</title>
  @Bundles.RenderStylesheets()
</head>
<body>
  <div id="header"><h1>Cassette.Nancy.Demo.TinyIoC</h1></div>
  <div id="body"><img src="@Html.RenderContext.ParsePath("~/Images/kitten.jpg")" /></div>
  <div id="footer">Copyright</div>

  @Bundles.RenderScripts()
  
  <script type="text/javascript">
    $(function () {
      window.app.layout.init('div#header', 'div#body', 'div#footer');
    });
  </script>
</body>
</html>